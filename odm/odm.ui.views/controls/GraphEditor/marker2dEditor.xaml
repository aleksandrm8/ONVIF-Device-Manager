<UserControl x:Class="odm.ui.controls.GraphEditor.marker2dEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas>
        <Border Name="number" CornerRadius="2" HorizontalAlignment="Center" VerticalAlignment="Center" Background="white" BorderBrush="Green" BorderThickness="2">
            <TextBlock Name="numtext" Margin="1,0,0,0" Foreground="Green" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" FontWeight="Bold"/>
        </Border>
        <Rectangle Name="marker" Style="{DynamicResource RectangleEditor}"/>
        <Ellipse Name="pointerDown" Height="10" Width="10" Style="{DynamicResource MarkerPointer}"/>
        <Ellipse Name="pointerUp" Height="10" Width="10" Style="{StaticResource MarkerPointer}"/>
    </Canvas>
</UserControl>
