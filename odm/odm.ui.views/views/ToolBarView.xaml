                      Visibility="Visible"
                      VerticalAlignment="Center" 
                      ToolTip="select language" 
                      Margin="0,0,6,0" 
                      FlowDirection="LeftToRight"
                      ItemsSource="{Binding LocalesCollection}"
                      SelectedItem="{Binding SelectedLocale}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding DisplayName}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>-->
</UserControl>
